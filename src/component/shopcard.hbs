{{#each cards}}
  {{#with this}}
    <div class='col-4 p-0'>
      <div class='card m-1'>
        <img
          class='crt-img-top'
          src={{image}}
          alt={{title}}
        />
        <div class='card-body'>
          <div class='card-title'>
            <h4>{{title}}
              {{#if isHot}}
                <span
                  class='badge text-bg-warning rounded-pill'
                >Hot</span>
              {{/if}}

              {{#if idNew}}
                <span
                  class='badge text-bg-primary rounded-pill'
                >New</span>
              {{/if}}
            </h4>
          </div>
          {{description}}
        </div>
      </div>
    </div>

  {{/with}}
{{/each}}