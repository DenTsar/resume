<main class='m-5'>
  <div class='row'>
    <div class='col-12'>
      <div class='row mt-5'>
        <div class='col-8'>
          {{#with formBlock}}
            <h2 class='mb-1'>{{header}}</h2>
            <div class="my-3">
              {{#with rating}}
                <b>{{title}}: {{value}}</b>
              {{/with}}
            </div>
            {{#with actionBlock}}
              <div class='nav nav-tabs mt-4'>
                {{#each tabs}}
                  <div class='nav-item col-4 text-center'>
                    <a class=
                    {{#if isActive}}'nav-link active'
                      {{else}} 'nav-link'
                    {{/if}}
                    href='#'> <b>{{text}}</b></a>

                  </div>
                {{/each}}
              </div>
              <hr class="my-5" style="border: 2px solid;">
              {{#with report}}
                <div class="card my-5 card-body">
                  <p>{{title}}</p>
                  <div>
                    <a href={{button.link}} class="btn btn-secondary">
                      {{button.text}}
                    </a>
                  </div>
                </div>
              {{/with}}

              <hr class="my-5" style="border: 2px solid;">

            {{/with}}
            {{#with feedbackBlock}}
              <h3 class="my-5">{{title}}</h3>
              <div>
                {{#each buttons}}                  
                    <a href={{link}} class=
                    {{#if isWarning}}"m-1 btn btn-warning"{{/if}}
                    {{#if isSuccess}}"m-1 btn btn-success"{{/if}}
                    {{#if isDanger}}"m-1 btn btn-danger"{{/if}}
                    >{{text}}</a>  
                {{/each}}
              </div>  
            {{/with}}
            </div>
            {{#with goodsInfo}}
              <div class="col-4" >
                <div class="card m-2 card-body" >
                  <img class="img-card-top mb-3" width="150" src={{photo}}>
                  <h4 >{{name}}</h4>
                </div>
                <div class="card m-2 card-body" >
                  <h4 class="card-title">{{price}}</h4>
                  <h6 >{{#if inMarket}}Є 
                        {{else}} Не має
                        {{/if}}
                        в наявності
                  </h6>
                  {{#each buttons}}
                    <div class="m-1">
                      <a href={{link}} class=
                        {{#if isPrimary}} 'btn btn-primary'
                          {{else}} 'btn btn-secondary'
                        {{/if}}
                       >{{text}}</a>
                    </div>
                  {{/each}}

                </div>
                <div class="card m-2 card-body" >
                  <h5>{{seller.title}}: <b>{{seller.value}}</b></h5>
                </div>
              </div>  
            {{/with}}

          {{/with}}

          <hr class="my-5" style="border: 2px solid;">

          {{#each reviewList}}
            {{>reviewItem}}
          {{/each}}
      </div>
      {{>shopaction}}
    </div>

  </div>

</main>