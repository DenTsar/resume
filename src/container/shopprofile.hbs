<main class='p-5'>
  <div class="row">
    <div class="col-12">
      <h1 class=" mt-3 mb-4">{{header}}</h1>
      {{#with purchase}}              
          <div class='nav nav-tabs'>
            {{#each tabs}}
              <div class='nav-item col-3'>
                <a href='#'class=
                  {{#if @first}} 
                    'nav-link active'
                    ><b class="ps-3">{{this}}</b></a>
                  {{else}}
                    'nav-link'
                    ><b>{{this}}</b></a>                     
                  {{/if}}                 
              </div>
            {{/each}}
          </div>
       
          {{#with actionBlock}}
            <div class='row my-4'>
              <div class='col-4'>
                {{#with input}}                  
                    <input class='form-control  ps-3' placeholder='{{placeholder}}'>                  
                {{/with}}
              </div>
              <div class="col-8" >
                {{#each buttons}}

                  {{#if isSuccess}}
                    <button class="btn btn-success" src={{link}}>{{text}}</button>
                  {{/if}}

                  {{#if isOutline}}
                    <button class="btn btn-outline-success" src={{link}}>{{text}}</button>
                  {{/if}}

                  {{#if isDanger}}
                    <button class="btn btn-outline-danger" src={{link}}>{{text}}</button>
                  {{/if}}
                {{/each}}
              </div> 
            </div>         
          {{/with}}      
        

        <hr class="my-3" style="border: 2px solid;">

        <div class='row my-2 px-3'>
          {{#each itemList}}
            <div class="col-4 mt-3">
              <h6>{{number}}</h6>
              <h5>{{status}} </h5>
            </div>
            <div class="col-2 mt-3">
              <h6>{{amount.title}}</h6>
              <h5>{{amount.value}} </h5>
            </div>
            <div class="col-4">
              {{#each images}}
                <img width="80" src={{this}}/>
              {{/each}}
            </div>
            <div class="col-2 mt-3">
              {{#with button}}
                {{#if isPrimary}}
                  <a class="btn btn-primary" href={{link}}>
                    {{text}}</a>
                {{/if}}  
              {{/with}}
            </div>
            <hr class="mt-3">

          {{/each}}
        </div>
      {{/with}}

      <hr class="my-5" style="border: 2px solid;">

      {{#with userInfo}}
        <h3 class="ps-0 mb-5" >{{title}}</h3>
        {{#with profileData}}          
            <div class="card">
              <div class="card-body">
                <H4 class=" mt-2 mb-3">{{title}}</H4>        
                <div class="card p-0 my-3" >
                  <div class="row">
                    {{#each fullName}}
                      <div class="col-4 m-0" >
                        <h6 class="m-2" >{{title}}</h6>
                        <h5 class="m-2">{{value}}</h5>
                      </div>
                    {{/each}}
                  </div>
                </div>

                <div class="card p-0 my-4" >
                  <div class="row">
                    {{#each otherInfo}}
                      <div class="col-4 m-0" >
                        <h6 class="m-2" >{{title}}</h6>
                        <h5 class="m-2">{{value}}</h5>
                      </div>
                    {{/each}}
                  </div>
                </div>
        {{/with}}

                <div class="card p-2 my-3" >
                  <div class="row">
                    {{#each buttons}}
                      <div class="col-4 m-0" >
                        <a class=
                          {{#if isPrimary}} "btn btn-primary"{{/if}}
                          {{#if isSecondary}} "btn btn-outline-secondary"{{/if}}
                          {{#if isDanger}} "btn btn-outline-danger"{{/if}}
                        src={{link}}>{{text}}</a> 
                      </div>
                    {{/each}}
                  </div>
                </div>
              </div>
            </div>
         
        
        

        {{#with recipients}}          
            <div class="card my-2">
              <div class="card-body">
                <H3 class=" mt-2 mb-3">{{title}}</H3>        
                  <div class="row col-12">
                    {{#each users}}             
                      <div class="card m-2 p-2 col-4">
                        <h5>{{name}}</h5>
                        <h5>{{phone}}</h5>
                        {{#with button}}
                          <div>
                          <a class="btn btn-primary" 
                            href={{link}}>{{text}}</a>
                          </div>
                        {{/with}}
                      </div>              
                    {{/each}}
                  </div>
              </div>
            </div>          
        {{/with}}

        {{#with contacts}}        
            <div class="card mb-3">
              <div class="card-body">
                <H3 class=" mt-2 mb-3">{{title}}</H3>        
                  <div class="row">
                    {{#each contactData}}             
                      <div class=" col-4">
                        <div class="card ">
                        <div class="card-body">
                          <h6>{{title}}</h6>
                          <h5>{{value}}</h5>
                          {{#with button}}
                            <div>
                              {{#if isPrimary}}
                                <a class="btn btn-primary" 
                                href={{link}}>{{text}}</a>
                              {{/if}}

                              {{#if isSecondary}}
                                <a class="btn btn-outline-secondary" 
                                href={{link}}>{{text}}</a>
                              {{/if}}

                              {{#if isDanger}}
                                <a class="btn btn-outline-danger" 
                                href={{link}}>{{text}}</a>
                              {{/if}}
                            </div>
                          {{/with}}
                        </div>
                        </div>
                      </div>              
                    {{/each}}
                  </div>
              </div>
            </div>      
        {{/with}}
        
      {{/with}}
      
    </div>
  </div>
  
</main>