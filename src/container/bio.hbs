<main class='p-5'>
  <div class='card card-body'>
    <h2>Bio:</h2>
    <strong>{{name}}</strong>
    <br />
    birthdate:
    <date>{{birthdate}}</date>
    <br />
    birthplace:
    {{birthplace}}
    <br />
    deathdate:
    <date>{{deathdate}}</date>
    <br />
    nationality:
    {{nationality}}
    <br />
    occupation:
    {{occupation}}
    <hr class='my-4' />
    Known for:
    {{#each known_for}}
      <li>{{this}}</li>
    {{/each}}
    <hr class='my-4' />

    {{#each education}}
      Education: degree:
      {{degree}}
      <br />
      field:
      {{field}}
      <br />
      institution:
      {{institution}}
      <br />
      year:
      <data>{{year}}</data>
      <br />
    {{/each}}
    <hr class='my-4' />

    Notable_publications:

    {{#each notable_publications}}
      <li>
        {{title}},
        {{year}},
        {{publisher}}.
      </li>
    {{/each}}
    <hr class='my-4' />

    Partners:
    {{#each partners}}
      <li>
        {{name}},
        <br />
        relationship:
        {{relationship}}, ({{years}})
      </li>
    {{/each}}
    <hr class='my-4' />

    Awards:
    <br />
    {{#each awards}}
      {{title}}, ({{year}})
      <br />
      description:
      {{description}}
    {{/each}}
    <hr class='my-4' />

    Influences:
    {{#each influences}}
      <li>
        {{this}}
      </li>
    {{/each}}
    <hr class='my-4' />

    Influenced:
    {{#each influenced}}
      <li>
        {{this}}
      </li>
    {{/each}}
    <hr class='my-4' />

    Quotes:
    {{#each quotes}}
      <li>
        <q>{{this}}</q>
      </li>
    {{/each}}
    <hr class='my-4' />

    Major discoveries:
    <br />
    {{#each major_discoveries}}

      {{title}}, ({{year}})
      <br />
      description:
      <q>{{description}}</q>

    {{/each}}
    <hr class='my-4' />

    Contributions:
    <br />
    {{#with contributions}}
      {{title}},
      <data>({{year}})</data>
      <br />
      description:
      <q>{{description}}</q>
      <br />
      field:
      {{field}}

    {{/with}}
    <hr class='my-4' />
  </div>

</main>