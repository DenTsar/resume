<main class='m-5'>
  <hr />
  <div class='nav py-0'>
    {{#with navigation}}
      {{#each links}}
        <div class='nav-item'>
          <a href={{href}} class='nav-link'>{{text}}</a>
        </div>
      {{/each}}
      <div class='nav-item'>
        <a href='#' class='nav-link disabled'>Shop home</a>
      </div>
    {{/with}}
  </div>
  <hr />

  <div class='row'>
    {{#with newsBlock}}
      <h2 class='text-center pt-5'>{{title}} </h2>
      {{#each cards}}
        <div class='col-3 g-3'>
          <div class='card text-bg-dark'>
            <div class='card-header'>
              {{title}}
              {{#if isNew}}
                <div
                  class='badge text-bg-success rounded-pill'
                >
                  Нова
                </div>
              {{/if}}
              {{#if isTop}}
                <div
                  class='badge text-bg-danger rounded-pill'
                >
                  Топ
                </div>
              {{/if}}
            </div>

            <p class='m-2'>{{description}}</p>
          </div>
        </div>
      {{/each}}
    {{/with}}
  </div>

  <div class='py-5'><hr /></div>

  {{#with goodsBlock}}
    <div class='row'>
      <div class='col-12'>
        <div class='nav nav-tabs'>
          {{#each tabs}}
            <div class='nav-item col-2'>
              {{#if isActive}}
                {{#if isDisabled}}
                  <a
                    href='#'
                    class='nav-link active disabled'
                  >{{text}}</a>
                {{else}}
                  <a href='#' class='nav-link active'><b
                    >{{text}}</b></a>
                {{/if}}
              {{else}}
                {{#if isDisabled}}
                  <a
                    href='#'
                    class='nav-link disabled'
                  >{{text}}t</a>
                {{else}}
                  <a href='#' class='nav-link'>{{text}}</a>
                {{/if}}
              {{/if}}
            </div>
          {{/each}}
        </div>

        <div class='row mt-5'>
          {{#each cards}}
            <div class='col-4 px-2 py-3'>
              <div class='card'>
                <img
                  class='crd-img-top'
                  src={{image}}
                  alt={{title}}
                />
                <div class='px-3'>
                  <div class='card-title'>
                    <h5>{{title}}
                      {{#if isHot}}
                        <span
                          class='badge text-bg-warning rounded-pill mx-1'
                        >HOT</span>
                      {{/if}}
                      {{#if isNew}}
                        <span
                          class='badge text-bg-primary rounded-pill mx-1'
                        >Нове</span>
                      {{/if}}
                    </h5>
                  </div>
                  <p>{{description}}</p>
                </div>
              </div>
            </div>
          {{/each}}
        </div>
      </div>
    </div>
  {{/with}}

  <div class='py-5'><hr /></div>

  {{#with subscribe}}
    <div class='col-12'>
      <div class='card p-3 text-bg-dark'>
        <h2 class='card-=header mb-4'>{{header}}</h2>
        <p>{{description}} </p>
        {{#each buttons}}
          <div>
            <a
              class='btn btn-primary m-2'
              href={{link}}
            >{{text}}</a>
          </div>
        {{/each}}

      </div>
    </div>
  {{/with}}

  <div class='py-5'><hr /></div>

  {{#with service}}
    <div class='col-12'>
      <div class='card p-2 text-bg-success text-center'>
        <h2 class='card-=header mb-4'>{{title}}</h2>
        <p>{{description}} </p>
        {{#each buttons}}
          <div>
            <a
              class='btn btn-primary m-2'
              href={{link}}
            >{{text}}</a>
          </div>
        {{/each}}

      </div>
    </div>
  {{/with}}

  <div class='py-5'><hr /></div>

  <div class='row col-10'>
    {{#each footer}}
      <div class='col-2 nav flex-column'>

        <a href={{0.link}} class='nav-link'>{{0.text}}</a>
        <a href={{1.link}} class='nav-link'>{{1.text}}</a>
        <a href={{2.link}} class='nav-link'>{{2.text}}</a>
        <a
          href={{3.link}}
          class='nav-link disabled'
        >{{3.text}}</a>

      </div>
    {{/each}}

  </div>

</main>