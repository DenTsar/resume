<main class='p-5'>
  <section>
    <div class='card'>
      <div class='card-body'>
        {{#with heading}}

          <div class='card'>
            <div class='card-body'>
              {{#with main}}
                <h1>{{title}}</h1>
                <p>{{text}}</p>

                <button class='btn btn-primary'>
                  {{button_text.solid}}
                </button>
                <br />
                <br />
                <button class='btn btn-outline-primary'>
                  {{button_text.outline}}
                </button>

              {{/with}}
            </div>
          </div>
          <br />

          <div class='card'>
            <div class='card-body'>
              {{#with second}}
                <h2>{{title}}</h2>
                <p>{{text}}</p>

                <button class='btn btn-secondary'>
                  {{button_text.solid}}
                </button>
                <br />
                <br />
                <button class='btn btn-outline-secondary'>
                  {{button_text.outline}}
                </button>

              {{/with}}
            </div>
          </div>
          <br />

          <div class='card'>
            <div class='card-body'>
              {{#with subblock}}
                <h2>{{title}}</h2>
                <p>{{text}}</p>

                <button class='btn btn-dark'>
                  {{button_text.solid}}
                </button>
                <br />
                <br />
                <button class='btn btn-outline-dark'>
                  {{button_text.outline}}
                </button>

              {{/with}}
            </div>
          </div>
        {{/with}}
        <br />
      </div>
    </div>
    <br />
    <br />

    {{#with nested_display}}
      <div class='card'>
        <div class='card-body'>
          <div class='display-1'>{{title}}</div>
          <div class='card'>
            <div class='card-body'>
              {{#with children_display}}
                <div class='display-4'>{{title}}</div>
                <p>{{text}}</p>
                <br />
                <button class='btn btn-outline-warning'>
                  {{button.text}}
                </button>
              {{/with}}
            </div>
          </div>
          <h6>{{header_text}}</h6>
          <button class='btn btn-info'>
            {{button.text}}
          </button>
        </div>
      </div>
    {{/with}}
    <br />
    <br />

    {{#with paragraph}}
      <div class='card'>
        <div class='card-body'>
          <p class='text-uppercase'>{{title}}</p>
          <p class='text-lowercase'>{{text}}</p>
          <button href={{button.url}} class='btn btn-link'>
            {{button.text}}
          </button>
          <div class='card'>
            <div class='card-body'>
              <ul>
                {{#each list_name}}
                  <li>
                    <a href={{url}}>
                      {{text}}
                    </a>
                  </li>
                {{/each}}
              </ul>
            </div>
          </div>
        </div>
      </div>
    {{/with}}

  </section>
</main>